@model RestPasswordViewModel
@{
	ViewData["Title"] = "RestPassword";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="agileits-top">
	<form asp-action="RestPassword" method="post">

		<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
		<span asp-validation-for="Password" class="alert-danger"></span>

		<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
		<span asp-validation-for="ConfirmPassword" class="alert-danger"></span>

		<input type="submit" value="RESET">
	</form>
	<p>Don't you have an Account? <a asp-action="SignUp"> SignUp Now!</a></p>
</div>

@model ForgetPasswordViewModel ;
@{
	ViewData["Title"] = "ForgetPassword";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="agileits-top">
	<form asp-action="ForgetPassword" method="post">

		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<span asp-validation-for="Email" class="alert-danger"></span>

		<input type="submit" value="SUBMIT">
	</form>
	<p>Don't you have an Account? <a asp-action="SignUp"> SignUp Now!</a></p>
</div>